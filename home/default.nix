{pkgs, config, ...}:

{
  environment.systemPackages = [
    pkgs.gnome-shell-extensions
  ];

  i18n.inputMethod = {
    type = "fcitx5";
    enable = true;
    fcitx5.waylandFrontend = true;
    fcitx5.addons = with pkgs; [
      rime-data
      fcitx5-rime
      fcitx5-gtk
      fcitx5-configtool
      fcitx5-nord
      libsForQt5.fcitx5-qt
      # fcitx5-chinese-addons
    ];
  };

  environment.variables = {
    GTK_IM_MODULE = "fcitx";
    QT_IM_MODULE = "fcitx";
    XMODIFIERS = "@im=fcitx";
  };
}
